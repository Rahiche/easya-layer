{
  "name": "@easya/layer-ui-react",
  "version": "0.0.2",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/styles/index.css",
  "files": [
    "dist",
    "src/**/*.css"
  ],
  "scripts": {
    "build": "tsup src/index.tsx src/styles/index.css --format cjs,esm --dts --external react --external react-dom --external @easya/layer-js --inject src/styles/inject.js --treeshake --minify",
    "dev": "tsup src/index.tsx src/styles/index.css --format cjs,esm --dts --external react --watch --inject src/styles/inject.js",
    "analyze": "tsup src/index.tsx --metafile=meta.json",
    "lint": "eslint src/**/*.ts*",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@easya/layer-js": "^0.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tsup": "^7.0.0",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}